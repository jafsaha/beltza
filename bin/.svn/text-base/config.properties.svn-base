### Modo de conexion a la base de datos
# server, inprocess
#db.mode=server
db.mode=inprocess

### URLs de conexion a la base de datos segun el modo
## Modo In-process
db.url.inprocess=jdbc:hsqldb:file:./data/BeltzaDB
## Modo Server (desarrollo)
db.url.server=jdbc:hsqldb:hsql://localhost/BeltzaDB

### Usuario y passowrd de conexion a la base de datos
db.user=sa
db.password=

### Path al archivo DDL de creacion de base de datos
db.ddl.filename=.//script//esquema.sql

### Path al archivo de datos
db.filename=.//data//BeltzaDB.data
